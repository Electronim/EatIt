<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mh.eatitremake">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/eat_it_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SelectIngredientActivity"
            android:theme="@style/AppTheme.PopUpTheme"></activity>
        <activity android:name=".MatchIngredients"></activity>
        <activity android:name=".NewRecipeActivity"></activity>
        <activity android:name=".RecipeDescriptionActivity" />
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainMenuActivity" />
        <activity android:name=".MainActivity" />
        <activity
            android:name=".DescriptionPopUp"
            android:theme="@style/AppTheme.PopUpTheme" />
    </application>

</manifest>